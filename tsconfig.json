{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": true,
    "paths": {
      "*": ["*"]
    },
    "rootDir": "src",
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": ["src"]
}
